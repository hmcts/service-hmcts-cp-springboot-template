<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <property name="severity" value="error"/>
  <property name="charset" value="UTF-8"/>


  <module name="NewlineAtEndOfFile"/>
  <module name="FileTabCharacter"><property name="eachLine" value="true"/></module>
  <module name="LineLength">
    <property name="max" value="120"/>
    <property name="ignorePattern" value="^package |^import |https?://|@see|@link"/>
  </module>

  <module name="TreeWalker">
    <!-- imports -->
    <module name="UnusedImports"/>
    <module name="AvoidStarImport"/>
    <module name="IllegalImport"><property name="illegalPkgs" value="sun,com.sun"/></module>
    <module name="ImportOrder">
      <property name="groups" value="java, javax, jakarta, org, io, uk, com"/>
      <property name="ordered" value="true"/>
      <property name="separated" value="true"/>
    </module>

    <!-- naming -->
    <module name="TypeName"/>
    <module name="MethodName"><property name="format" value="^[a-z][a-zA-Z0-9]*$"/></module>
    <module name="ParameterName"><property name="format" value="^[a-z][a-zA-Z0-9]*$"/></module>
    <module name="LocalVariableName"><property name="format" value="^[a-z][a-zA-Z0-9]*$"/></module>
    <module name="MemberName"><property name="format" value="^[a-z][a-zA-Z0-9]*$"/></module>
    <module name="ConstantName"/>

    <!-- layout -->
    <module name="NeedBraces"/>
    <module name="LeftCurly"><property name="option" value="eol"/></module>
    <module name="RightCurly"/>
    <module name="WhitespaceAround"/>
    <module name="NoWhitespaceAfter"/>
    <module name="NoWhitespaceBefore"/>
    <module name="EmptyLineSeparator"/>

    <!-- structure -->
    <module name="OuterTypeFilename"/>
    <module name="OneTopLevelClass"/>
    <module name="PackageDeclaration"/>
  </module>
</module>
